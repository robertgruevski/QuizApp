@model QuizApp.Models.ViewModels.QuizViewModel
@if (Model.Questions.Any())
{
    <form asp-controller="Quiz" asp-action="Submit" method="post">
        <div class="mt-4">
            <h1>Guess the capital - (@Model.Questions.Count) questions</h1>
            <div class="mt-4">
                @for (int i = 0; i < Model.Questions.Count; i++)
                {
                    <h3>@Model.Questions[i].Text</h3>
                    <div>
                        @foreach (var option in Model.Questions[i].Options)
                        {
                            <p>
                                <label>
                                    <input required
                                           type="radio"
                                           value="@option.Value"
                                           name="userAnswers[@i]" />
                                    @option.Text
                                </label>
                            </p>
                        }
                    </div>
                }
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-primary">
                Submit
            </button>
        </div>
    </form>

}